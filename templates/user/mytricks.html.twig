{% extends 'base.html.twig' %}
{% block title %}
    Mes figures
{% endblock %}
{% block body %}
    {% include "shared/_flashWarning.html.twig" %}
    {% include "shared/_flashSuccess.html.twig" %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
        <li class="breadcrumb-item active">Mes Figures</li>
    </ol>
    <h1>Mes Figures : </h1>
    <div class="row">
        {% for trick in tricks %}
            <div class="col-3">
                <div class="card">
                    <img style="width:253px; height: 150px;" src="{{ trickDir }}{{ trick.mainImage.name }}"
                         class="img-fluid"
                         alt="trick">
                    <div class="card-body">
                        <h4 class="card-title">{{ trick.name }}</h4>
                        <span class="badge badge-info">{{ trick.category.name }}</span>
                        <p class="card-text"
                           style="height: 200px;">{{ trick.description|length > 200 ? trick.description|slice(0, 200) ~ '...' : trick.description }}</p>
                        <a href="{{ path('trick_show', {'category_slug':trick.category.slug, 'slug':trick.slug}) }}"
                           class="btn btn-primary btn-sm">DÃ©tails</a>
                        <a href="{{ path('trick_modify', {'id':trick.id}) }}"
                           class="btn btn-success btn-sm">Modifier</a>
                        <a href="{{ path('trick_delete', {'id':trick.id}) }}"
                           class="btn btn-danger btn-sm">Supprimer</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}